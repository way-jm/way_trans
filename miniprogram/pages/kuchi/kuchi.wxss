.uploadCotainer {
  text-align: center;
}

.upload {
  text-align: center;
  border: 1px dotted #E4E7ED;
  margin: 10px auto;
  padding: 10px;
  box-sizing: border-box;
  display: inline-block;
}

.upload image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 5px;
}

.upload view {
  line-height: 20px;
  color: #909399;
  font-size: 12px;
}

.selectOption {
  border: 1px solid #E4E7ED;
  margin: 5px auto;
  width: 95%;
  box-sizing: border-box;
  padding: 8px;
  border-radius: 5px;
}

.selectAlp,
.selectColor {
  text-align: left;
  margin-bottom: 15px;
}

.selectAlp .title {
  text-indent: 5px;
  color: #606266
}

.selectColor .title {
  text-indent: 5px;
  color: #606266
}

.picker {
  text-align: left;
  font-size: 15px;
  font-weight: bolder;
  color: #303133;
  line-height: 30px;
}

.picker text {
  text-decoration: underline;
  vertical-align: top;
  color: #c41d7f;
}

.active {
  display: flex;
}

.active .colorBoard {
  width: 80px;
  height: 80px;
  border-radius: 5px;
}

.active .colorTitle {
  flex: 1;
  width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 80px;
  margin-left:20px;
  font-size: 16px;
  color:#606266
}
.board{
  display: flex;
  flex-wrap: wrap;
  margin-top:15px
}
.board .item{
  width: 35px;
  height: 35px;
  box-sizing: border-box;
  border:1px solid #F2F6FC
}
