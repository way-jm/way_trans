.chartList{
  display: block;
}
.item{
  display: block;
  width: 100%;
  height: 70px;
  position: relative;
}
.core{
  display: flex;
  position: absolute;
  width: 100%;
  height: 70px;
}
.item + .item .right{
  border-top: 1px solid #EBEEF5;
}
.left{
  width: 75px;
  height: 70px;
}
.left image{
  margin:10px 10px 10px 15px;
  width: 50px;
  height: 50px;
  border-radius: 5px;
}
.right{
  flex:1;
  
  padding: 10px 0;
}

.right .user{
   line-height: 30px;
   font-size: 16px;
   color:#303133;
   position: relative;
}
.right .user .time{
  line-height: 30px;
  font-size: 12px;
  color:#909399;
  position: absolute;
  right: 18px;
  top:0;
}
.right .news{
  line-height: 15px;
  font-size: 12px;
  color:#909399
}
.bar{
  width: 100%;
  box-sizing: border-box;
  padding: 0 15px;
}